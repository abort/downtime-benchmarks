<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">
    
  <property name="auto-online-ddl" value="true"/>

  <changeSet id="drop_backward_upd_trigger" author="Jorryt">
    <sql dbms="oracle" endDelimiter="/">
        DROP TRIGGER local_to_all_local_new_upd
    </sql>
  </changeSet>

  <changeSet id="drop_insert_trigger" author="Jorryt">    
    <sql dbms="oracle" endDelimiter="/">
      DROP TRIGGER order_insert
    </sql>
  </changeSet>

  <changeSet id="drop_upd_trigger" author="Jorryt">
    <sql dbms="oracle" endDelimiter="/">
      DROP TRIGGER all_local_to_local_upd
    </sql>      
  </changeSet>

    <!-- we drop the new column because we know the benchmark doesn't use it, doesn't matter to measure the impact -->
  <changeSet id="drop_column" author="jorryt">
      <dropColumn tableName="orders">
          <column name="O_ALL_LOCAL_NEW" />
      </dropColumn>
  </changeSet>
</databaseChangeLog>